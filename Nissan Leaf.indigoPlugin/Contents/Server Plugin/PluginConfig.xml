<?xml version="1.0"?>
<PluginConfig>
	<SupportURL>http://forums.indigodomo.com/viewtopic.php?t=15461</SupportURL>

	<Field id="username" type="textfield">
		<Label>Username:</Label>
	</Field>
	<Field id="password" type="textfield" secure="true">
		<Label>Password:</Label>
	</Field>
	<Field id ="region" type="menu">
		<Label>Region:</Label>
		<List>
			<Option value="NMA">Australia</Option>
			<Option value="NCI">Canada</Option>
			<Option value="NE">Europe</Option>
			<Option value="NML">Japan</Option>
			<Option value="NNA">USA</Option>
		</List>
	</Field>

	<Field id="separator1" type="separator"/>

	<Field id ="distanceUnit" type="menu">
		<Label>Distance Unit:</Label>
		<List>
			<Option value="k">kilometer</Option>
			<Option value="m">mile</Option>
			<Option value="f">furlong</Option>
		</List>
	</Field>
	<Field id="updateDelayMinutesWhenCharging" type="textfield" defaultValue="15">
		<Label>Update frequency when charging (minutes)</Label>
	</Field>
	<Field id="updateDelayMinutesWhenNotCharging" type="textfield" defaultValue="15">
		<Label>Update frequency when NOT charging (minutes)</Label>
	</Field>


	<Field id ="debuggingEnabled" type="menu">
		<Label>Debug logging enabled:</Label>
		<List>
			<Option value="n">no</Option>
			<Option value="y">yes</Option>
		</List>
	</Field>


</PluginConfig>
